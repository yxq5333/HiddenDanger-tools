<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Z.Base.App.Theme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelectableText">
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/z_button_main_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GreenButton" parent="MainButton">
        <item name="android:background">@drawable/button_green_color</item>
    </style>

</resources>
