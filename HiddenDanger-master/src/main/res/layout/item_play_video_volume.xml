<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/play_video_progress_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/volume"
            android:textColor="@color/white" />

        <com.hg.widget.enview.ENVolumeView
            android:id="@+id/volumeProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            app:volume_bg_line_color="@color/white"
            app:volume_bg_line_width="5"
            app:volume_line_color="@color/white"
            app:volume_line_width="5" />

    </LinearLayout>

</FrameLayout>